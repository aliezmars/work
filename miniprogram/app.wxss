/**app.wxss**/
page{
  height: 100%;
  -webkit-overflow-scrolling: touch;
}
.titletext{
  font-size: large;
  font-weight: 1000;
  text-align: center;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.buttonhover{
  opacity: 0.9;
  transform: scale(0.98,0.98);
  position: relative;
  top:3rpx;
  left: 3rpx;
  box-shadow: 0px 0px 8px rgba(0,0,0, .1) insert;
}
.headicon-avatar {
  margin-top: 150rpx;
  margin-left: auto;
  margin-right: auto;
  margin-bottom:20rpx;
  text-align: center;
  overflow: hidden;
  display: block;
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
  border: 2px solid #ebebef;
}
.input{
  padding: 10px;
  height: 15px;
}
.inputview{
  border: 1px solid rgb(30, 144, 255);
  border-radius: 10px;
  margin-left: 30px;
  margin-right:30px;
  margin-top: 15px;
}
.divLine{
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
 }